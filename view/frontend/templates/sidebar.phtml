<?php
/**
 * Category sidebar
 *
 * @var $block Sebwite\Sidebar\Block\Sidebar
 */
$categories = $block->getCategories();

// Loop through categories
foreach($categories as $category) :
?>
    <div class="root">
        <h4>
            <a href="<?php echo $block->getCategoryUrl($category); ?>" title="<?php echo $category->getName(); ?>" class="<?php echo ($block->isActive($category) ? 'is-active' : ''); ?>">
                <?php echo $category->getName(); ?>
            </a>
            <?php if($category->hasChildren()) : ?>
                <span class="expand"></span>
            <?php endif; ?>
        </h4>

        <?php echo $block->getChildCategoryView($category); ?>
    </div>
<?php endforeach; ?>